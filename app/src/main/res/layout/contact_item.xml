<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_vertical"
    style="@style/settings_buttons">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_item_photo"
        android:layout_width="@dimen/settings_user_photo_width"
        android:layout_height="@dimen/settings_user_photo_height"
        android:src="@drawable/default_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/contact_item_fullname"
        style="@style/normal_text"
        android:text="@string/default_contact_item_fullname"
        app:layout_constraintStart_toEndOf="@id/contact_item_photo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/contact_item_state"
        style="@style/small_text"
        android:text="@string/default_contact_item_state"
        app:layout_constraintTop_toBottomOf="@id/contact_item_fullname"
        app:layout_constraintStart_toEndOf="@id/contact_item_photo"/>

    
    
    
    

</androidx.constraintlayout.widget.ConstraintLayout>